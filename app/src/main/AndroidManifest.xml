<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.groep3.pathedeapp">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PatheDeApp">
        <activity
            android:name=".presentation.ListActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.ListCreateActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.MovieDetail"
            android:exported="false" />
        <activity android:name=".presentation.PersonalListActivity"
            android:exported="false"/>
        <activity
            android:name=".presentation.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".presentation.MainActivity"
            android:exported="true" />
        <activity
            android:name=".presentation.LoginActivity"
            android:exported="true" />
    </application>

</manifest>